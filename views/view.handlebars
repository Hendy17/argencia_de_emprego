<div id="job-view-container" class="container"> 
  <div class="row">
    <div class="col-12 text-center">
      <a class="back-link main-color" href="/">Voltar</a>
    </div>
    <div id="img-container" class="col-12 text-center">
      <img src="/assets/argencia.dev.webp" alt="{{job.company}}">
    </div>
    <div class="col-12">
      <h1 class="main-color text-center">{{job.title}}</h1>
      <p class="bold text-center">Quem eles estão buscando</p>
      <p class="job-desc text-center">{{job.description}}</p>
      <p class="text-center"><span class="bold">O salário informado é de:</span> R${{job.salary}}</p>
      <p class="text-center">
        Para trabalhar na 
        <span class="bold main-color">
          {{job.company}}
        </span> 
        envie seu e-mail para a 
        <a href="mailto:{{job.email}}">
          {{job.email}}
        </a>
      </p>
    </div>
  </div>
</div>
